kind: Service
apiVersion: v1
metadata:
  name: ct-api-service
  namespace: command-center
  labels:
    app: command-center
    component: ct-api
    tier: api
  annotations:
    service.beta.kubernetes.io/azure-load-balancer-internal: "true"  # Internal load balancer annotation
spec:
  type: LoadBalancer
  loadBalancerIP: 172.16.160.10  # Static IP within the Application Gateway subnet range
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
  selector:
    app: command-center
    component: ct-api
    tier: api
  sessionAffinity: None
  ipFamilies:
    - IPv4
  ipFamilyPolicy: SingleStack
  internalTrafficPolicy: Cluster
