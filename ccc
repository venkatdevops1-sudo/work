kind: Deployment
apiVersion: apps/v1
metadata:
  name: cc-ui
  namespace: command-center
  labels:
    app: command-center
    component: cc-ui
    tier: UI
  annotations:
    deployment.kubernetes.io/revision: '7'
spec:
  replicas: 1
  selector:
    matchLabels:
      app: command-center
      component: cc-ui
      tier: UI
  template:
    metadata:
      labels:
        app: command-center
        component: cc-ui
        tier: UI
    spec:
      containers:
        - name: cc-ui
          image: devscmct.azurecr.io/cc-ui-updated:v6
          ports:
            - containerPort: 80
              protocol: TCP
          envFrom:
            - configMapRef:
                name: cc-config  # Name of your ConfigMap
          resources:
            limits:
              cpu: 400m
              memory: 400Mi
            requests:
              cpu: 200m
              memory: 200Mi
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          imagePullPolicy: IfNotPresent
      restartPolicy: Always
      terminationGracePeriodSeconds: 30
      dnsPolicy: ClusterFirst
      nodeSelector:
        agentpool: agentpool
      securityContext: {}
      imagePullSecrets:
        - name: acr-secret
      schedulerName: default-scheduler
      tolerations:
        - key: CriticalAddonsOnly
          operator: Exists
          effect: NoSchedule
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 25%
      maxSurge: 25%
  revisionHistoryLimit: 10
  progressDeadlineSeconds: 600
